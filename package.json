{
  "name": "civihr-default-theme",
  "description": "CiviHR employee portal custom Drupal theme",
  "license": "AGPL-3.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/compucorp/civihr-employee-portal-theme"
  },
  "bugs": {
    "url": "https://github.com/compucorp/civihr-employee-portal-theme/issues"
  },
  "scripts": {
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "semistandard --fix",
      "git add"
    ],
    "*.scss": [
      "stylelint --fix",
      "git add"
    ]
  },
  "semistandard": {
    "globals": [
      "CRM", "Drupal", "location"
    ]
  },
  "stylelint": {
    "extends": "stylelint-config-sass-guidelines",
    "plugins": [
      "stylelint-order",
      "stylelint-scss"
    ],
    "rules": {
      "selector-class-pattern": null,
      "selector-max-id": 1,
      "max-nesting-depth": 3,
      "no-extra-semicolons": true,
      "no-duplicate-selectors": true
    }
  },
  "devDependencies": {
    "husky": "^0.14.3",
    "lint-staged": "^6.1.0",
    "semistandard": "^12.0.0",
    "stylelint": "^8.4.0",
    "stylelint-config-sass-guidelines": "^4.1.0",
    "stylelint-order": "^0.8.0",
    "stylelint-scss": "^2.3.0"
  }
}
